@model Yvz.Northwind.MVCWebUI.Models.ProdcutListViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
}
<br />
<div>

    <table class="table">
        <tr>
            <td>Prodcut Name</td>
            <td>Unit Price</td>
            <td>Unit in Stock</td>
            <td></td>
        </tr>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td><a class="btn btn-outline-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Sepete Ekle</a></td>
            </tr>
        }
    </table>
</div>
<product-list-pager current-category="@Model.CurrentCategory"
                    current-page="@Model.CurrentPage"
                    page-count="@Model.PageCount"
                    page-size="@Model.PageSize">
</product-list-pager>